{
  "name": "wisdomforge",
  "version": "1.0.0",
  "description": "A powerful knowledge management system that forges wisdom from experiences, insights, and best practices",
  "main": "dist/index.js",
  "bin": {
    "wisdomforge": "./dist/run.js"
  },
  "scripts": {
    "build": "tsc && cp src/register-dist.js dist/register.js && cp src/run.js dist/ && chmod +x dist/run.js",
    "build:windows": "tsc && copy src\\register-dist.js dist\\register.js && copy src\\run.js dist\\",
    "start": "node -r ./dist/register.js dist/src/index.js",
    "start:dev": "ts-node -r tsconfig-paths/register src/index.ts",
    "start:legacy": "node -r ./dist/register.js dist/src/legacy-retrieval-server.js",
    "dev": "ts-node -r tsconfig-paths/register src/index.ts",
    "dev:legacy": "ts-node --esm src/legacy-retrieval-server.ts",
    "import": "ts-node src/scripts/data-import.ts",
    "upload": "ts-node src/scripts/document-uploader.ts",
    "test": "jest --config jest.config.cjs",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .ts",
    "store-doc": "ts-node src/scripts/store-documentation.ts",
    "deploy": "smithery deploy"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.8.0",
    "@qdrant/js-client-rest": "^1.13.0",
    "@smithery/cli": "^1.0.0",
    "axios": "^1.8.4",
    "chromadb": "^2.1.0",
    "dotenv": "^16.4.7",
    "module-alias": "^2.2.3",
    "pdf-parse": "^1.1.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "smithery": {
    "type": "mcp-server",
    "name": "wisdomforge",
    "description": "A powerful knowledge management system that forges wisdom from experiences, insights, and best practices",
    "version": "1.0.0",
    "author": "Your Name",
    "license": "MIT",
    "repository": {
      "type": "git",
      "url": "https://github.com/yourusername/wisdomforge"
    },
    "keywords": [
      "mcp",
      "knowledge-management",
      "wisdom",
      "insights",
      "best-practices",
      "vector-database"
    ]
  }
}
